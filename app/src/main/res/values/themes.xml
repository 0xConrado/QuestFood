<resources>

    <!-- Tema do aplicativo -->
    <style name="Theme.QuestFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cor de fundo padrão -->
        <!-- Cor de fundo da barra de status -->
        <item name="android:statusBarColor">#FF0000</item>
        <!-- Cor do texto e ícones na barra de status -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">#FF0000</item>
        <item name="colorPrimaryVariant">@android:color/holo_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="ThemeOverlay.QuestFood.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
