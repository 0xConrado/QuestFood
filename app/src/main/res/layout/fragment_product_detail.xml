<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Esconde o Bottom Navigation -->
    <View
        android:id="@+id/bottomNavigationSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Header com o nome e ícone do carrinho -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/red"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/nav_arrow_left"
            android:contentDescription="Voltar"
            android:padding="4dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MONTANDO ITEM"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="8dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cartIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cart"
                android:contentDescription="Carrinho"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/cartBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignTop="@id/cartIcon"
                android:layout_alignEnd="@id/cartIcon"
                android:background="@android:color/white"
                android:text="0"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="10sp"
                android:gravity="center"
                android:visibility="gone"
                android:padding="2dp"
                android:layout_marginTop="-4dp"
                android:layout_marginEnd="-4dp"
                android:backgroundTint="@android:color/white"
                android:backgroundTintMode="src_in" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Imagem do Produto -->
    <ImageView
        android:id="@+id/productImageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/placeholder_image" />

    <!-- Nome e Preço do Produto -->
    <TextView
        android:id="@+id/productNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:textColor="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/productOldPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 72,00"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="18sp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/productPriceDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 64,99"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Ingredientes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingredientes"
        android:background="@color/red"
        android:padding="8dp"
        android:textSize="18dp"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/ingredientsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ingrediente 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ingrediente 1"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botão de Adicionar ao Pedido -->
    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADICIONAR AO PEDIDO"
        android:background="@color/red"
        android:textColor="@android:color/white"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/plus_circle"
        android:drawableRight="@drawable/cart"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

</LinearLayout>
