<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/banner_background"
    android:gravity="center_vertical"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/questIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/placeholder_image"
        android:layout_marginEnd="8dp"
        android:contentDescription="Quest Icon" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome da Missão"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal" />

        <ProgressBar
            android:id="@+id/questProgress"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:progress="0"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/questTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10 Tarefas concluídas"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/questStatusIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/gift_box"
        android:layout_marginStart="8dp"
        android:contentDescription="Quest Status Icon" />

</LinearLayout>
