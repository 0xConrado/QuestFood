<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Saudações e perfil -->
        <include
            android:id="@+id/home_profile_section"
            layout="@layout/layout_profile_section" />

        <!--        &lt;!&ndash; Barra de busca &ndash;&gt;-->
        <!--        <EditText-->
        <!--            android:id="@+id/searchBar"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:hint="Search"-->
        <!--            android:drawableStart="@drawable/search"-->
        <!--            android:drawablePadding="8dp"-->
        <!--            android:padding="12dp"-->
        <!--            android:background="@drawable/search_bar_background"-->
        <!--            style="@style/DefaultEditText" />-->

        <!-- Promoções -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promoções"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Banner promocional -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/banner_background"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"> <!-- Adicionado espaçamento entre barra e banner -->

            <!-- Texto e botão à esquerda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Título -->
                <TextView
                    android:id="@+id/bannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get your special\nsale up to 50%"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Descrição -->
                <TextView
                    android:id="@+id/bannerSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Enjoy, before its runs out"
                    android:textColor="#888888"
                    android:textSize="14sp" />

                <!-- Botão -->
                <Button
                    android:id="@+id/shopNowButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#000000"
                    android:text="Shop Now"
                    android:textColor="#FFFFFF"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp" />
            </LinearLayout>

            <!-- Imagem do banner -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/media_image"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!--        &lt;!&ndash; Botão de Filtro &ndash;&gt;-->
        <!--        <TextView-->
        <!--            android:id="@+id/filterButton"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="16dp"-->
        <!--            android:padding="8dp"-->
        <!--            android:background="@drawable/filter_background"-->
        <!--            android:text="Bebidas"-->
        <!--            android:textColor="@color/black"-->
        <!--            android:textSize="16sp"-->
        <!--            android:gravity="center" />-->

        <!-- Categorias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categorias"
            android:textColor="@color/gray"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- RecyclerView com botão de Adicionar Categoria -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categoriesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>
</LinearLayout>
