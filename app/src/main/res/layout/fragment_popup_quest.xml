<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título da Missão -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/titleEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Título da Missão"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            style="@style/DefaultEditText" />
    </LinearLayout>

    <!-- Descrição da Missão -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Descrição (opcional)"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="textMultiLine" />
    </LinearLayout>

    <!-- Quantidade para Progresso -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Quantidade (Máximo de progresso)"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="number" />
    </LinearLayout>

    <!-- EXP Ganha ao Completar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/expEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="EXP Ganho"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="number" />
    </LinearLayout>

    <!-- Categoria de Recompensa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/rewardCategorySpinner"
            android:layout_width="0dp"
            android:backgroundTint="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Produto de Recompensa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <Spinner
            android:id="@+id/rewardProductSpinner"
            android:layout_width="0dp"
            android:foregroundTint="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Quantidade do Produto de Recompensa -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/circle"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/rewardQuantityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Quantidade do Produto de Recompensa"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="number" />
    </LinearLayout>

    <!-- URL da Imagem -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_bar_background"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/placeholder_image"
            android:paddingEnd="8dp" />

        <EditText
            android:id="@+id/imageUrlEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="URL da Imagem (opcional)"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Botão Criar Missão -->
    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Criar Missão"
        android:textSize="16sp"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

</LinearLayout>
