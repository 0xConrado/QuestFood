<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Título da Missão -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Título da Missão"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/titleEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título da Missão"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>

    <!-- Descrição da Missão (não editável) -->
    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição (será preenchida automaticamente)"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp"/>

    <!-- Quantidade para Progresso e EXP Ganho na mesma linha -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantidade (Máximo de progresso)"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/quantityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Quantidade"
            android:textSize="14sp"
            android:padding="12dp"
            android:inputType="number"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/expEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="EXP Ganho"
            android:textSize="14sp"
            android:padding="12dp"
            android:inputType="number"
            android:textColor="@android:color/black"/>
    </LinearLayout>

    <!-- Categorias Participantes da Missão -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categorias participantes da missão"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/selectCategoriesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecionar Categorias"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:id="@+id/selectedCategoriesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp" />

    <!-- Produto de Recompensa -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Produto de Recompensa"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/selectProductsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecionar Produto de Recompensa"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/selectedRewardProductTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nenhum produto selecionado"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/rewardQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Qtd Produto"
        android:textSize="14sp"
        android:padding="12dp"
        android:inputType="number"
        android:textColor="@android:color/black"/>

    <!-- URL da Imagem -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL da Imagem (opcional)"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/imageUrlEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL da Imagem (opcional)"
        android:textSize="14sp"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black"/>

    <!-- Previsão da Imagem -->
    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/placeholder_image"
        android:layout_marginBottom="16dp"
        android:contentDescription="Imagem da Missão"/>

    <!-- Botão Criar Missão -->
    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary"
        android:padding="16dp"
        android:text="SALVAR"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
