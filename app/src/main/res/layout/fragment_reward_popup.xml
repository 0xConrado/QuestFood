<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/rewardImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"/>

    <TextView
        android:id="@+id/rewardTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recompensa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingTop="8dp"/>

    <TextView
        android:id="@+id/rewardQuantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantidade: 1"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingTop="4dp"/>

    <TextView
        android:id="@+id/rewardExpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP Ganhado: 10"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:paddingTop="4dp"/>

    <Button
        android:id="@+id/receiveRewardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Receber Recompensa"
        android:backgroundTint="@color/red"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp"/>
</LinearLayout>
